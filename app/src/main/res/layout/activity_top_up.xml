<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topupactivity"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.TopUpActivity">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAmount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textAmount"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/qanelas_semibold"
        android:paddingTop="5dp"
        android:text="amount_detail"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:textSize="23dp" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:background="#5e5f60" />

    <TextView
        android:id="@+id/textAmount"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/btnSubmitTop"
        android:layout_toStartOf="@+id/btnSubmitTop"
        android:text="Amount: "
        android:gravity="right"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAmount"
        android:layout_alignBottom="@+id/textAmount"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtpayment"
        android:layout_width="120dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAmount"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textAmount"
        android:layout_marginBottom="203dp"
        android:gravity="right"
        android:text="Payment: " />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="215dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="194dp"
        android:layout_toEndOf="@+id/txtpayment"
        android:layout_toRightOf="@+id/txtpayment" />

    <Button
        android:id="@+id/btnSubmitTop"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:background="#000000"
        android:fontFamily="@font/qanelas_semibold"
        android:gravity="center_vertical|center"
        android:text="Submit"
        android:textColor="#FFFFFF" />


</RelativeLayout>